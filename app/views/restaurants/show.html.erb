
<h1> <%= @restaurant.name %> </h1>
<hr>
<p> Address : <%= @restaurant.address %> </p>
<p> Category : <%= @restaurant.category %></p>

<ul class="list-group my-3">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> | rating : <%= review.rating %> ⭐️</li>
  <% end %>
</ul>

<hr class="my-4">
<h2 class="py-2"> Fill the form to submit a review ! </h2>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary my-3" %>
<% end %>

<%= link_to 'Back', restaurants_path %>
